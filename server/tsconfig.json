{
   "compilerOptions": {
      "target": "ES2015",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   },
   "$schema": "https://json.schemastore.org/tsconfig",
   "display": "Recommended",
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
}
